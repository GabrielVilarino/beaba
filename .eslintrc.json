{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "plugin:react/recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "indent": ["error", 2],
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-var": "error",
        "space-before-blocks": ["error", "always"],
        "comma-style": ["error", "last"],
        "no-trailing-spaces": "error",
        "jsx-quotes": ["error", "prefer-single"]
    }
}
